{
  "hosting": {
    "site": "yurisilva",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/functions/**",
      "**/.vscode**", 
      "comandos-IMPORTANTES.txt"
    ],
    "i18n": {
      "root": "/localized-files"
    },
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
